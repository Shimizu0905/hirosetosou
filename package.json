  "description": "",
  "devDependencies": {
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-sorting": "^9.1.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^6.0.4",
    "terser": "^5.44.1",
    "vite": "^5.4.21"
  }
