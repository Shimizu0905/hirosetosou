  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run copy-assets",
    "copy-assets": "cp main.js dist/ && cp contact-mail.php dist/ && cp header.html dist/ && cp footer.html dist/ && cp footer-confirm.html dist/ && cp contact-thanks.html dist/ 2>/dev/null || true && mkdir -p dist/img/common && cp -r img/common/* dist/img/common/ 2>/dev/null || true",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "sort-css": "node node_modules/postcss-sorting/index.js style.css --config .postcss-sorting.json --write",
    "lint:css": "stylelint \"**/*.css\" --fix",
    "lint:css:check": "stylelint \"**/*.css\""
  },
  "keywords": [],
